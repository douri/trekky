<div id="inscription">
    <div id="contenu_inscription">

    <h1>Inscription</h1>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :pseudo %>
        <%= f.text_field :pseudo %></div>

        <div><%= f.label :email %>
        <%= f.email_field :email %></div>

        <div><label for="user_password">Mot de passe</label>
        <%= f.password_field :password %></div>

        <div><label for="user_password_confirmation">Confirmation</label>
        <%= f.password_field :password_confirmation %></div>

        <div><%= f.label :avatar %>
        <%= f.file_field :avatar %></div>

        <div class="actions"><%= f.submit "Inscription" %></div>
    <% end %>

    <!--<%= render "links" %>-->
    <div class="spacer"></div>
    </div>
</div>
